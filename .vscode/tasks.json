{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Nix repl",
      "command": "nix repl ~/dotfiles/flake.nix",
      "type": "shell",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Update flake",
      "command": "nix flake update ~/dotfiles",
      "type": "shell",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build flake",
      "command": "cd ~/dotfiles; nix build .#darwinConfigurations.DarioBook.system --show-trace",
      "type": "shell",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Apply flake",
      "command": "darwin-rebuild switch --flake ~/dotfiles",
      "type": "shell",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
